[flake8]
# Конфигурация flake8

# Стандартные настройки PEP 8
max-line-length = 120
extend-ignore = E203, E266, E501, W503

# Структура файла
exclude = 
    .git,
    __pycache__,
    .tox,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .eggs,
    migrations,
    node_modules,
    .pytest_cache,
    .coverage,
    htmlcov,
    *.pyc,
    *.pyo,
    .mypy_cache,
    *.so,
    .DS_Store

# Аргументы
extend-select = 
    B006  # mutable default arguments
    B008  # function call in argument defaults
    C901  # complex function
    C902  # too many local variables
    E502  # backslash & whitespace
    E731  # lambda expression
    W291  # trailing whitespace
    W293  # blank line contains whitespace
    W504  # line break after binary operator

# Максимальные метрики сложности
max-complexity = 15

# Статистика по метрикам
statistics = True
count = True

# Сообщения
show-source = True
show-pep8 = False
doctest-options = ENABLE_DOCTEST